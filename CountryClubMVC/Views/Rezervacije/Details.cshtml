@model DomainModel.Rezervacija
@{
  ViewBag.Title = "Rezervacija " + Model.IdRezervacija;
}

<h5>Početak: @Model.DatumPocetka</h5>
<h5>Završetak: @Model.DatumZavrsetka</h5>
<p><strong>Datum kreiranja: </strong> @Model.DatumKreiranja</p>
<p><strong>Cijena: </strong> @Model.CijenaRezervacije</p>

