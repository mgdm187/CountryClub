<br>
@if(Model.Usluge.Count > 0)
{
  <div class="table-responsive pt-2">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Usluga</th>
        <th scope="col">OD</th>
        <th scope="col">DO</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model.Usluge)
      {
        <tr>
          <td>
            @item.NazivUsluge
          </td>
          <td>
            @item.Od.ToString("dd.MM.yyyy. HH:mm")
          </td>
          <td>
            @item.Do.ToString("dd.MM.yyyy. HH:mm")
          </td>
        </tr>
      }
      </tbody>
  </table>
</div>
}


